<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="gov.dot.fhwa.saxton.crossingrequest.fragments.DriverNotificationFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorAccent"
        android:gravity="center_horizontal|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:src="@drawable/ic_caution_pedestrian_crosswalk" />

        <TextView
            android:id="@+id/driverNotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Pedestrian Ahead"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="@string/driver_notification" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:src="@drawable/ic_caution_pedestrian_crosswalk" />

    </LinearLayout>
</FrameLayout>
