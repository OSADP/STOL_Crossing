<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gov.dot.fhwa.saxton.crossingrequest.fragments.DriverMapViewFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ViewAnimator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <fragment
            android:id="@+id/fragment"
            android:name="gov.dot.fhwa.saxton.crossingrequest.fragments.DriverNotificationFragment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            tools:layout="@layout/fragment_driver_notification" />
    </ViewAnimator>
</FrameLayout>
